@import './fonts'
@import './colors'
body 
    font-family: 'Lato'
    font-size: 20px
    background-color: $color2
    padding: 0
    margin: 0
    cursor: default
    display: grid

.contents
    margin: 20px
    display: flex
    flex-direction: row
    flex-wrap: wrap
    transition: all 1s ease

    .contents-item
        padding: 4px
        margin: 2px
        width: 120px
        white-space: nowrap
        overflow: hidden
        text-overflow: ellipsis
        cursor: pointer

        &.selected
            background-color: $color4
            color: $color2

        &:hover
            background-color: $color4
            color: $color2

.title-bar
    display: flex
    align-content: justify
    align-items: strecth
    .title-bar-draggable-area
        flex-grow: 1
        -webkit-app-region: drag
    .title-bar-buttons
        display: flex
        flex-direction: row
        align-items: stretch
    .title-bar-button
        padding-left: 8px
        padding-right: 8px
        color: $color1
        &:hover
            background-color: $color1
            color: $color2

.tab-bar
    display: flex
    flex-direction: row
    align-items: baseline
    border: 1px solid black

    .tab-bar-item
        min-width: 100px
        max-width: 200px
        padding: 5px
        border: 1px solid black
        display: flex
        
        &:hover
            background-color: $color4
        .tab-bar-path
            text-overflow: ellipsis
            overflow: hidden
            white-space: nowrap
            flex-grow: 1

        .tab-bar-close:hover
            background-color: $color1
        
        &.active
            background-color: $color4
    
    .tab-bar-new-tab
        padding: 5px
        border: 1px solid black
        &:hover
            background-color: $color4

.path-bar
    border: 1px solid black
    padding: 5px
    display: flex

    .path-bar-up-button
        &:hover
            background-color: $color4
    
    .path-bar-path-string
        flex-grow: 1
        text-align: center
    
.favorites-panel
    padding: 5px
    .favorites-title
        font-weight: bold
    .favorites-item
        cursor: pointer
        &:hover
            background-color: $color4
            color: $color2
    .favorites-add-button
        color: $color5

.staging-area
    .staging-area-items
        display: flex
        flex-direction: row
        .staging-area-item
            display: flex
            flex-direction: row
            min-width: 120px
            margin: 5px
            .staging-area-item-name
                flex-grow: 1
            .staging-area-item-remove
                background: $color1